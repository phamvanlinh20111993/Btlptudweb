<!--Giao dien cho phep tao lai mat khau
  <!--modal-->
<div id="pwdModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
  <div class="modal-content">
      <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
          <h1 class="text-center">What's My Password?</h1>
      </div>
      <div class="modal-body">
          <div class="col-md-12">
                <div class="panel panel-default" style="margin-top: 6%;">
                    <div class="panel-body">
                        <div class="text-center">
                          <h3 style="font-style: italic;font-size: 110%;">If you have forgotten your password you can reset it here.</h3>
                            <div class="panel-body">
                                <fieldset>
                                    <div class="form-group">
                                      <input class="form-control input-lg" placeholder="E-mail Address" name="email" type="email" autofocus="">
                                      <h4 style="color:red;font-size:oblique;"></h4>
                                    </div>
                                      <input class="btn btn-lg btn-primary btn-block" value="Send My Password" type="submit">
                                </fieldset>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- form nhap lai password -->
                <div class="panel panel-default" style="margin-top: 6%;display: none;">
                  <div class="panel-body">
                        <div class="text-center">
                          <h3>Enter your's new password:</h3>
                            <div class="panel-body">
                                <fieldset>
                                     <div class="form-group">
                                       <input class="form-control input-lg" placeholder="Mail authentication code" name="email" type="email" maxlength="60" autofocus="">
                                        <h4 style="color:red;font-size:oblique;"></h4>
                                    </div>
                                    <div class="form-group">
                                       <input class="form-control input-lg" placeholder="New password" name="pass" type="password" maxlength="25" minlength="8" autofocus="">
                                        <h4 style="color:red;font-size:oblique;"></h4>
                                    </div>
                                    <div class="form-group">
                                       <input class="form-control input-lg" placeholder="Repeat new password" name="confirmpass" type="password" maxlength="25" minlength="8">
                                        <h4 style="color:red;font-size:oblique;"></h4>
                                    </div>
                                    <input class="btn btn-lg btn-primary btn-block" value="Done" type="submit">
                                </fieldset>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
      </div>
      <div class="modal-footer">
          <div class="col-md-12">
          <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
        </div> 
      </div>
  </div>
  </div>
</div>

  <br>
    <hr class="prettyline">

    <% if(typeof code_err != 'undefined'){ %>
    <% if(code_err == 1){ %>
     <div class="alert alert-info" style="margin-top: 2%;">
        <strong>Sorry! </strong>Mã xác thực của bạn không đúng. Vui lòng đăng kí lại.
     </div>
	<% }else if(code_err == 2){ %>
